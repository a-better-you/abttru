<nav class="navbar navbar-default">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <a class="navbar-brand" href="#">Brand</a>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
</nav>
<div class="container">
    <div class="row">
        <div class="col-md-2 col-sm-2">
            <a class="btn btn-default" href="/home">Go Home</a>
        </div>
    </div>
    <h1>USER INFO</h1>
    <div class="row">
        <div class="col-md-12 panel panel-default patient-info">
            <table style="width:100%">
                <tr>
                    <th>Patient Name</th>
                    <th>Risk Factor</th>
                    <th>Diet Recommendation</th>
                    <th>Allergies/Restrictions</th>
                    <th>Favorite Recipe</th>
                </tr>
                {{#each patients}}
                    {{> users/user-block}}
                {{/each}}
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="patient-info"></div>
                <form class="create-form">
                    <div class="form-group">
                        <label>Search Ingredient:</label>
                        <input type="text" id="user-input">
                    </div>
                    <div class="form-group">
                    </div>
                    <a href="api/recipes">
                        <button class="search">Search For Recipes</button>
                    </a>
                </form>
            </div>
            <div class="col-md-8" id="recipe-area">
        </div>
    </div>
    <div class="row">
        <div class="col-md-8" id="plot-area">
            <div class="row">
                <div class="col-md-12 col-lg-12" id="tester">
                </div>
                <!-- <div class="col-md-4 col-lg-4 offset-4" id="tester-2">
                </div> -->
            </div>
        </div>
        <div class="col-md-4" id="recipe-area">
            <div class="panel panel-default" style="display:none" id="panel-slider">
                <div class="panel-body">
                    <!-- Where the carousel goes -->
                    <div id="sliders" class="slide carousel" data-ride="carousel" data-pause="true">
                        
                        <!-- Carousel slides -->
                        <div id="carousel" class="carousel carousel-inner">
                            <ol class='carousel-indicators'>
                            </ol>
                            <!-- Wrapper for slides -->
                            <div class="carousel-inner" role="listbox" id="item-list">
                                <div class="item active" id="item-active">
                                </div>
                                <!-- <div class="item" id="item-one">
                                 </div> -->
                            </div>
                        </div>

                        <!-- Carosel Controls -->
                        <div id="controls">
                            <a class="left" href="#sliders" data-slide="prev" title="Previous Slide">
                                <span class="glyphicon glyphicon-chevron-left"></span>
                            </a>
                                <!-- <i id="pause" class="fa fa-pause" title="Pause"></i>
                                <i id="play" class="fa fa-play" title="Play"></i> -->
                            <a class="right" href="#sliders" data-slide="next" title="Next Slide">
                                <span class="glyphicon glyphicon-chevron-right"></span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-12" id="tester-2">
        </div>
    </div>
</div>
    <!-- Modal -->
    <div id="login-modal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h2 class="modal-title">
                    </h2>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary submit">Submit</button>
                </div>
            </div>
        </div>
    </div>
        <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
<script src="js/user-info.js" type="text/javascript"></script>